@model ShoppingApplicationMVC.Models.User

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body" style="border:1px solid black">
                    <h3 class="text-center mb-4">Login</h3>
                    <form asp-controller="Shopping" asp-action="Login" method="post">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email:</label>
                            <input asp-for="Email" type="text" class="form-control" style="border:1px solid black" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password:</label>
                            <input asp-for="Password" type="password" class="form-control" style="border:1px solid black" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="text-center">
                            <button type="submit" class="btn btn-dark">Login</button>
                        </div>
                        <br />

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

